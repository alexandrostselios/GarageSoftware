@model GaragePortal.Models.Email
@inject LanguageService Resource

@{
    ViewData["Title"] = "Send Email";
}

<h1>@Resource.GetKey("Send_Email")</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmail" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReceiverID" value="@ViewBag.ReceiverID" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label">@Resource.GetKey("Subject")</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label">@Resource.GetKey("Message")</label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



