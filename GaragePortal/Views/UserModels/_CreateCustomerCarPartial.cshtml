@model GaragePortal.Models.UserModelsDTO
@inject LanguageService Resource

<script src="~/js/JavaScript.js" defer></script>

<script type="text/javascript">
    window.onload = function what() {
        document.getElementById('ShowManufacturers').innerHTML = getManufacturers();
    };
</script>

<div id="AddMakes" name="AddMakes" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Resource.GetKey("Add_Customer_Details_Form")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="CreateCustomerPartial" asp-controller="Users" enctype="multipart/form-data">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ModelManufacturer" class="control-label"></label>
                        <br />
                        <select id="ShowManufacturers" onchange="getManufacturersForModel(getSelectedManufacturer())" asp-for="ModelManufacturer" class="form-control">
                            <option value='0'>--Select Manufacturer--</option>
                        </select>
                        <input asp-for"ModelManufacturer" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <br />
                        <select id="ShowModels" onchange="getYearsForModel(getSelectedModel())" asp-for="Model" class="form-control">
                            <option value='0'>--Select Model--</option>
                        </select>
                    </div>
                    <div>
                        <label asp-for="ModelYear" class="control-label"></label>
                        <br />
                        <select id="ShowYears" asp-for="ModelYear" class="form-control">
                            <option value='0'>--Select Year--</option>
                        </select>
                        <input asp-for"ModelYear" type="hidden" />
                    </div>
