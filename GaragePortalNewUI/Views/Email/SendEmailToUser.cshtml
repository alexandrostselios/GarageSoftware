@model GaragePortalNewUI.Models.Email
@inject LanguageService Resource

@{
    ViewData["Title"] = "Send Email";
}

<div id="SendEmailToUser" name="SendEmailToUser" class="modal" tabindex="-1" role="form">
    <div class="modal-dialog draggable" role="document">
        <div class="modal-content">
            <div class="modal-header dragable_touch d-block">
                <h5 class="modal-title">@Resource.GetKey("Send_Email")</h5>
            </div>
            <form asp-action="CreateEmail" enctype="multipart/form-data">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReceiverID" value="@ViewBag.ReceiverID" />
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label">@Resource.GetKey("Subject")</label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label">@Resource.GetKey("Message")</label>
                        <input asp-for="Message" class="form-control" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">@Resource.GetKey("Send")</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">@Resource.GetKey("Cancel")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.draggable').draggable({
            handle: '.modal-header'
        });
    });
</script>