@model GaragePortalNewUI.Models.CustomerCars
@inject LanguageService Resource
@{
    ViewData["Title"] = "partial Car Editted";
}

<div id="EditCarDetails" name="EditCarDetails" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog draggable" role="document">
        <div class="modal-content">
            <div class="modal-header dragable_touch d-block">
                <h5 class="modal-title">@Resource.GetKey("Edit_Car_Details")<h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <form asp-action="EditCarDetails" asp-route-flag="0" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="modal-body">
                    <div class="form-group">
                        <b>@Resource.GetKey("Model_Manufacturer")</b>
                        @Html.DisplayFor(model => model.ManufacturerName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <b>@Resource.GetKey("Model")</b>
                        @Html.DisplayFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <b>@Resource.GetKey("Model_Year")</b>
                        @Html.DisplayFor(model => model.ModelYear, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <b>VIN</b>
                        @Html.DisplayFor(model => model.VIN, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                    <div class="form-group">
                        <b>@Resource.GetKey("Licence_Plate")</b>
                        @Html.DisplayFor(model => model.LicencePlate, new { htmlAttributes = new { @class = "form-control" }})
                    </div>

                    <div class="form-group">
                        <b><label asp-for="Color" class="control-label">@Resource.GetKey("Color")</label></b>
                        <input asp-for="Color" class="control-label" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <b>@Resource.GetKey("Car_Image")</b>
                        <input type="file" class="form-control-file form-control-image" id="files" asp-for="CarImage" name="Image" accept="image/*" onchange="previewImage()">
                        <span asp-validation-for="CarImage" class="text-danger"></span>
                        @Html.ValidationMessageFor(m => m.CarImage)
                    </div>
                    <div class="modal-footer">
                        <button type="submit" value="Create" class="btn btn-success">@Resource.GetKey("Edit_Car_Details")</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">@Resource.GetKey("Cancel")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.draggable').draggable({
            handle: '.modal-header'
        });
    });
</script>