@model GaragePortalNewUI.Models.Users
@inject LanguageService Resource


<div id="EditEngineer" name="EditEngineer" class="modal" tabindex="-1" role="form">
    <div class="modal-dialog" role="document" >
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Resource.GetKey("Edit_Mechanic_Profile")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="EditEngineer" enctype="multipart/form-data">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">@Resource.GetKey("Name")</label>
                        <input asp-for="Name" class="form-control" />
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">@Resource.GetKey("Surname")</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label  asp-for="EngineerSpeciality" class="control-label">@Resource.GetKey("Engineer_Speciality")</label> @*(@Html.DisplayFor(modelItem => modelItem.EngineerSpeciality))*@
                        <input type="hidden" id="EngineerSpecialityID" value="@Html.DisplayFor(modelItem => modelItem.EngineerSpeciality)">
                        <br />
                        <select id="EditEngineerSpeciality" asp-for="EngineerSpeciality" class="form-control">
                            <option hidden value='0'>--@Resource.GetKey("Select_Speciality")--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" value="********" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPhoto" class="control-label"></label>
                        <input type="file" class="form-control-file form-control" id="files" asp-for="UserPhoto" name="Image" accept="image/*" onchange="previewImage()">
                        <span asp-validation-for="UserPhoto" class="text-danger"></span>
                        @Html.ValidationMessageFor(m => m.UserPhoto)
                    </div>
                    @Html.HiddenFor(model => model.UserType)
                    @Html.HiddenFor(model => model.CreationDate)
                    @Html.HiddenFor(model => model.LastLoginDate)
                    @Html.HiddenFor(model => model.EnableAccess)
                    <div class="modal-footer">
                        <button type="submit" value="Create" class="btn btn-success">@Resource.GetKey("Edit")</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">@Resource.GetKey("Cancel")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function(){
        var url = $(this).data('url');
        $.get(url).done(function (data) {
            $.getJSON('@Resources.SettingsResources.Uri'+'/GetEngineerSpecialities')
            .done(function (data) {
                // On success, 'data' contains a list of products.
                $.each(data, function (key, item) {
                    // Add a list item for the product.
                    if (document.getElementById('EngineerSpecialityID').value === item.speciality) {
                        $("#EditEngineerSpeciality").append($("<option value=" + item.id + " selected='selected'>" + item.speciality + "</option>"));
                    }else{
                        $("#EditEngineerSpeciality").append($("<option></option>").val(item.id).html(item.speciality));
                    }
                });
            });
        });
    });
    console.log(document.getElementById('EngineerSpecialityID').value);
</script>